{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mission edit</h1>

    {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="form-group">
        {{ form_label(edit_form.client, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.client) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.serviceDate, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.serviceDate) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.productName, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.productName) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.quantity, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.quantity) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.countryDestination, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.countryDestination) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.vendorName, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.vendorName) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(edit_form.vendorEmail, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
        <div class="col-sm-10">
            {{ form_widget(edit_form.vendorEmail) }}
        </div>
    </div>

    {{ form_end(edit_form) }}

    <div class="form-group">
        <div class="col-sm-12">
            {{ form_start(delete_form) }}
            <input class="btn btn-default" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
