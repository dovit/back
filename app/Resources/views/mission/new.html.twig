{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mission creation</h1>

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            {{ form_label(form.serviceDate, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
            <div class="col-sm-10">
                {{ form_widget(form.serviceDate) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.productName, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
            <div class="col-sm-10">
                {{ form_widget(form.productName) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.quantity, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
            <div class="col-sm-10">
                {{ form_widget(form.quantity) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.countryDestination, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
            <div class="col-sm-10">
                {{ form_widget(form.countryDestination) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.vendorName, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
            <div class="col-sm-10">
                {{ form_widget(form.vendorName) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.vendorEmail, null , {'label_attr': {'class': 'col-sm-2'}} ) }}
            <div class="col-sm-10">
                {{ form_widget(form.vendorEmail) }}
            </div>
        </div>

        {{ form_widget(form) }}
        <input class="btn btn-default" type="submit" value="Create" />
    {{ form_end(form) }}

{% endblock %}
